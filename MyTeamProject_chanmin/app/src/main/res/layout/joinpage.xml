<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/join_scrollview"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white">

        <Button
            android:id="@+id/btn_join_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@android:drawable/ic_menu_close_clear_cancel"
            app:backgroundTint="#000000"
            android:layout_gravity="right"/>

        <TextView
            android:layout_width="400dp"
            android:layout_height="40dp"

            android:layout_gravity="center"
            android:text="회 원 가 입"
            android:gravity="center"
            android:layout_marginTop="-5dp"
            android:textSize="30dp" />

        <LinearLayout
            android:layout_width="370dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:layout_marginTop="50dp"
            >

            <EditText
                android:id="@+id/edt_join_id"
                android:layout_width="290dp"
                android:layout_height="40dp"
                android:background="@drawable/gray_edittext"
                android:hint="아이디(5~12자의 영문 소문자, 숫자)"
                android:gravity="center"
                android:maxLength="12"
                android:textSize="16dp"
                android:singleLine="true"
                android:layout_margin="0dp"
                />

            <Button

                android:id="@+id/btn_join_idChk"
                android:singleLine="true"
                android:layout_width="70dp"
                android:layout_height="40dp"

                android:layout_gravity="center"
                android:layout_marginLeft="4dp"
                android:text="중복확인"
                android:textSize="11dp"
                android:padding="0dp"
                android:backgroundTint="@color/black"/>

        </LinearLayout>


        <TextView
            android:id="@+id/txtv_join_id"
            android:layout_width="360dp"
            android:layout_gravity="center"
            android:gravity="right"
            android:layout_height="15dp"
            android:textSize="12dp"
            android:textColor="#FF0000"
            android:visibility="invisible"/>

        <EditText
            android:id="@+id/edt_join_pw"
            android:layout_width="370dp"
            android:layout_height="40dp"
            android:background="@drawable/gray_edittext"
            android:layout_gravity="center"
            android:layout_marginTop="1dp"
            android:hint="비밀번호(8~20자의 영문 대소문자, 숫자, (@,!,*,?)"
            android:textSize="16dp"
            android:gravity="center"
            android:inputType="textPassword"
            android:singleLine="true"/>

        <TextView
            android:id="@+id/txtv_join_pw"
            android:layout_width="360dp"
            android:layout_height="15dp"
            android:textSize="12dp"
            android:layout_gravity="center"
            android:gravity="right"
            android:textColor="#FF0000"
            android:visibility="invisible" />

        <EditText
            android:id="@+id/edt_join_pwchk"
            android:layout_width="370dp"
            android:layout_height="40dp"
            android:layout_marginTop="1dp"
            android:background="@drawable/gray_edittext"
            android:layout_gravity="center"
            android:hint="비밀번호 확인"
            android:textSize="16dp"
            android:gravity="center"
            android:inputType="textPassword"
            android:singleLine="true"/>

        <TextView
            android:id="@+id/txtv_join_pwchk"
            android:layout_width="360dp"
            android:layout_height="15dp"
            android:textSize="12dp"
            android:layout_gravity="center"
            android:gravity="right"
            android:textColor="#FF0000"
            android:visibility="invisible"/>

        <EditText
            android:id="@+id/edt_join_name"
            android:layout_width="370dp"
            android:layout_height="40dp"
            android:layout_marginTop="1dp"
            android:background="@drawable/gray_edittext"
            android:layout_gravity="center"
            android:hint="이름"
            android:textSize="16dp"
            android:gravity="center"
            android:inputType="text"
            android:singleLine="true"/>

        <TextView
            android:id="@+id/txtv_join_name"
            android:layout_width="360dp"
            android:layout_height="15dp"
            android:textSize="12dp"
            android:layout_gravity="center"
            android:gravity="right"
            android:textColor="#FF0000"
            android:visibility="invisible"/>

        <EditText
            android:id="@+id/edt_join_email"
            android:layout_width="370dp"
            android:layout_height="40dp"
            android:layout_marginTop="1dp"
            android:background="@drawable/gray_edittext"
            android:layout_gravity="center"
            android:hint="이메일"
            android:textSize="16dp"
            android:gravity="center"
            android:inputType="textEmailAddress"
            android:singleLine="true"/>

        <TextView
            android:id="@+id/txtv_join_email"
            android:layout_width="360dp"
            android:layout_height="15dp"
            android:textSize="12dp"
            android:layout_gravity="center"
            android:gravity="right"
            android:textColor="#FF0000"
            android:visibility="invisible"/>

